<% layout('layout') -%>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">


      <% if (message.length > 0) { %>
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
        <%= message %>
    </div>
      <% } %>

    <form method="post">

      <h1> Δημιουργία Προϊόντος </h1>

      <div class="form-group">
        <label="name">Όνομα προϊόντος: </label>
        <input type="text" class="form-control" name="name">
      </div>
      <div class="form-group">
        <label="name">Κατηγορία: </label>
        <input type="text" class="form-control" name="category">
      </div>
      <div class="form-group">
        <label="name">Τιμή: </label>
        <input type="number" class="form-control" name="price">
      </div>
      <div class="form-group">
        <label="name">Ηλικία: </label>
        <input type="number" class="form-control" name="age">
      </div>
      <div class="form-group">
        <label="name">Διεύθυνση: </label>
        <input type="text" class="form-control" name="address">
      </div>
      <div class="form-group">
          <label="name">URI Φωτογραφίας: </label>
          <input type="text" class="form-control" name="photo">
      </div>

      <!-- Select Basic -->

      <button type="submit" class="btn btn-success">Υποβολή</button>

    </form>
  </div>
</div>

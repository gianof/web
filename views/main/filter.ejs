<% layout('layout') -%>

<div class="row">
    <div class="col-lg-6 col-md-offset-3">



        <form method="post">

            <h1> Φίλτρο αναζήτησης </h1>

            <div class="form-group">
                <label="name">Κατηγορία: </label>
                <input type="text" class="form-control" name="category">
            </div>
            <div class="form-group">
                <label="name">Ηλικία από: </label>
                <input type="number" class="form-control" name="ageGte">
            </div>
            <div class="form-group">
                <label="name">Ηλικία εώς: </label>
                <input type="number" class="form-control" name="ageLt">
            </div>
            <div class="form-group">
                <label="name">Απόσταση σε km: </label>
                <input type="text" class="form-control" name="kilometers">
            </div>
            <div class="form-group">
                <label="name">Τιμή από: </label>
                <input type="text" class="form-control" name="priceGte">
            </div>
            <div class="form-group">
                <label="name">Τιμή εώς: </label>
                <input type="text" class="form-control" name="priceLt">
            </div>
                <!-- Select Basic -->

            <button type="submit" class="btn btn-success">Υποβολή</button>

        </form>
    </div>
</div>

